<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weiweili.isfitness"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="22" />

    <uses-feature
        android:name="android.hardware.Camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.weiweili.isfitness.Login"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.weiweili.isfitness.MainActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.weiweili.isfitness.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.weiweili.isfitness.GroupSharing"
            android:label="@string/title_activity_group_sharing" >
        </activity>
        <activity
            android:name="com.example.weiweili.isfitness.MyPage"
            android:label="@string/title_activity_my_page" >
        </activity>
        <activity
            android:name="com.example.weiweili.isfitness.SearchUser"
            android:label="@string/title_search_friend"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.weiweili.isfitness.ShareContent"
            android:label="@string/title_activity_share_content" >
        </activity>
    </application>

</manifest>