<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:layout_width="fill_parent"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/bSearchUser"
            android:text="Search User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivPhoto"
            android:layout_below="@+id/bSearchUser"
            android:src="@drawable/default_userimage"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="UserName: "
            android:textSize="15dp"
            android:layout_toRightOf="@+id/ivPhoto"
            android:layout_alignTop="@+id/ivPhoto"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/tvUsername" />

        <TextView
            android:id="@+id/etUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/tvUsername"
            android:layout_alignTop="@+id/tvUsername"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Name: "
            android:id="@+id/tvName"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsername"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ivPhoto"/>

        <TextView
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/tvName"
            android:layout_alignTop="@+id/tvName" />



        <TextView
            android:layout_width="wrap_content"
            android:text="Email"
            android:id="@+id/tvEmail"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPhoto"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail"
            />


        <Button
            android:id="@+id/bLogout"
            android:text="Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etEmail" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Content"
            android:id="@+id/bShareContent"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/bLogout" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Page"
            android:id="@+id/bMyPage"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/bShareContent" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group Sharing"
            android:id="@+id/bGroupSharing"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/bMyPage" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sport"
            android:id="@+id/bSport"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/bGroupSharing" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MySport"
            android:id="@+id/bMySport"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/bSport" />


    </RelativeLayout>

</ScrollView>


