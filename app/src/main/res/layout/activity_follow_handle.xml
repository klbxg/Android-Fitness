<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.weiweili.isfitness.FollowHandle">

    <ImageView
        android:id="@+id/search_result_userImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft = "5dp"
        android:src="@drawable/default_userimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/search_result_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/search_result_userImage" />

    <ImageButton
        android:id="@+id/add_friend"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight ="10dp"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/add_friend"
        style="?android:attr/borderlessButtonStyle" />

</RelativeLayout>
