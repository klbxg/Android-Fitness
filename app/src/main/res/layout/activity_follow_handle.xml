<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.weiweili.isfitness.FollowHandle">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/ivFollowHead"
        android:src="@drawable/groupsharing_head"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/user_selected_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft = "5dp"
        android:src="@drawable/default_userimage"
        android:layout_alignBottom="@+id/ivFollowHead"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/user_selected_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:text="sfjladjfladjf"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/user_selected_image"
        android:layout_toEndOf="@+id/user_selected_image" />

    <ImageButton
        android:id="@+id/add_friend"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginRight ="10dp"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/add_friend"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignBottom="@+id/user_selected_image"
        android:layout_alignParentEnd="true"
        />

    <com.example.weiweili.isfitness.XListView
        android:id="@+id/lvFollowContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivFollowHead"
        android:dividerHeight="5dp"
        android:divider="#E6E6E6"/>

</RelativeLayout>
